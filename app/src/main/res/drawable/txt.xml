<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="@color/preview_c"
                android:endColor="#2F00BCD4"
                android:startColor="@color/preview_c"
                />
            <corners
                android:radius="2dp"
                />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="#0fE9E9E9" />
            <corners
                android:radius="2dp"
                />
        </shape>
    </item>

</layer-list>