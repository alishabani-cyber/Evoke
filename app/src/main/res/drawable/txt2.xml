<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="@color/preview_c"
                android:endColor="#00BCD4"
                android:startColor="@color/preview_start"
                />
            <corners
                android:radius="360dp"
                />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape android:shape="rectangle" >
            <solid android:color="#FCE9E9E9" />
            <corners
                android:radius="360dp"
                />
        </shape>
    </item>

</layer-list>